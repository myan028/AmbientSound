
    
<Window x:Class="AmbientSoundWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AmbientSoundWPF"
        mc:Ignorable="d"
        Title="Ambient Sound" Height="500" Width="500"
    Name="AmbientSound" Icon="AmbientSound.ico" Foreground="White" WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight" ResizeMode="CanMinimize">
    <Grid Name="grid1" Margin="0" Background="#FFACACAC" HorizontalAlignment="Left" VerticalAlignment="Top" Width="500" Height="500">
        <Button x:Name="OnButton" Content="OFF" HorizontalAlignment="Left" Margin="175,0,0,75" VerticalAlignment="Bottom" Width="150" Height="49" Click="Button_Click" Background="Red" FontWeight="Bold"/>


        <TextBox Text="{ Binding ElementName=MinSlider, Path=Value, UpdateSourceTrigger=PropertyChanged}" Name="MinText" DockPanel.Dock="Right" TextAlignment="Center" Width="25" Height="25" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,100,250" />
        <Slider Value="20" Minimum ="0" Maximum="50" TickPlacement="BottomRight" TickFrequency="5" IsSnapToTickEnabled="True" Name="MinSlider" Width="100" Height="25" Margin="0,0,250,250" HorizontalAlignment="Center" VerticalAlignment="Center" />

        <TextBox Text="{Binding ElementName=MaxSlider, Path=Value, UpdateSourceTrigger=PropertyChanged}" Name="MaxText" DockPanel.Dock="Right" TextAlignment="Center" Width="25" Height="25" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="400,0,0,250" />
        <Slider Value="80" Minimum ="50" Maximum="100" TickPlacement="BottomRight" TickFrequency="5" IsSnapToTickEnabled="True" Name="MaxSlider" Width="100" Height="25" Margin="250,0,0,250" HorizontalAlignment="Center" VerticalAlignment="Center" />

        <Label x:Name="MinLabel" Content="Minimum" HorizontalAlignment="Center" Margin="0,0,250,300" VerticalAlignment="Center" Height="27"/>
        <Label x:Name="MaxLabel" Content="Maximum" HorizontalAlignment="Center" Margin="250,0,0,300" VerticalAlignment="Center" Height="27"/>
        <Label x:Name="InLabel" Content="Input" HorizontalAlignment="Center" Margin="0,150,250,0" VerticalAlignment="Center" Height="27"/>
        <Label x:Name="OutLabel" Content="Output" HorizontalAlignment="Center" Margin="250,150,0,0" VerticalAlignment="Center" Height="27"/>
        <ProgressBar x:Name="InLevel" HorizontalAlignment="Center" Height="100" Margin="0,0,250,0" VerticalAlignment="Center" Width="100" RenderTransformOrigin="0.5,0.5">
            <ProgressBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </ProgressBar.RenderTransform>
        </ProgressBar>
        <ProgressBar x:Name="OutLevel" HorizontalAlignment="Center" Height="100" Margin="250,0,0,0" VerticalAlignment="Center" Width="100" RenderTransformOrigin="0.5,0.5">
            <ProgressBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </ProgressBar.RenderTransform>
        </ProgressBar>

        <ComboBox Name ="DeviceSelect" HorizontalAlignment="Center" Margin="0,0,0,400" VerticalAlignment="Center" Width="120">
            <Label Name ="DeviceLabel" HorizontalAlignment ="Center" VerticalAlignment="Center" Content="Select a Device"/>
        </ComboBox>

    </Grid>
</Window>
